<%- include('partials/header') -%>
  <div class="container">
    <div class="row mt-5">
      <div class="col-6">
        <div>
          <p><strong>User Name</strong>: <%= user.userName %>
          </p>
          <p><strong>Email</strong>: <%= user.email %>
          </p>
          <a href="/logout" class="col-3 btn btn-primary">Logout</a>
        </div>

        <!-- Add incident information -->
        <div class="mt-5">
          <h2>Add an Incident</h2>

          <fieldset>
            <legend>
              <h3>Administrative</h3>
            </legend>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <section>
                <h3>Incident Numbers</h3>
                <input type="text" name="group" placeholder="Group">
                <input type="text" name="battalion" placeholder="Battalion">
                <input type="text" name="company" placeholder="Company">
              </section>
              <section>
                <h3>Personnel</h3>
                <input type="text" name="teamLeader" placeholder="Team Leader">
                <input type="text" name="dutyOfficer" placeholder="Duty Officer">
                <input type="text" name="teamMember1" placeholder="Team Member 1">
                <input type="text" name="teamMember2" placeholder="Team Member 2">
                <input type="text" name="teamMember3" placeholder="Team Member 3">
              </section>
          </fieldset>

          <fieldset>
            <legend>
              <h3>Start</h3>
            </legend>

            <div class="mb-3">

              <section>
                <label for="time">Call Recieved</label>
                <input type="time" name="startTime">
                <input type="date" name="dateCallRecieved">
              </section>

              <section>
                <label for="Unit / LEO Info">Contact Info</label>
                <input type="text" name="rank" placeholder="Rank">
                <input type="text" name="leoFirstName" placeholder="First Name">
                <input type="text" name="leoLastName" placeholder="Last Name">
                <input type="tel" name="leoCell" placeholder="Cell">
              </section>

              <section>
                <label for="itemDescription">Item Description</label>
                <textarea name="itemDescription" placeholder="1ea 105mm M1, Projectile, 60-D-2-00-00"></textarea>
              </section>

              <section>
                <label for="explosives">Explosives Drawn</label>
                <textarea name="explosives" placeholder="Ex. 2ea MN88  LOT: ABC-123"></textarea>
              </section>

              <section>
                <label for="departTime">Depart Time</label>
                <input type="time" name="departTime">
                <label for="departDate">Depart Date</label>
                <input type="date" name="departDate">
                <input type="number" name="truckDepartMiles" placeholder="Start Miles">
              </section>

              <div>
                <fieldset>
                  <legend>
                    <h3>Arrival On-Scene</h3>
                  </legend>
                  <section>
                    <label for="time">Arrive Time</label>
                    <input type="time" name="arrivalTime">
                    <label for="arrivalDate">Arrival Date</label>
                    <input type="date" name="arrivalDate">
                  </section>
                  <section>
                    <label for="onSceneSafeArea">Safe Area Grid</label>
                    <input type="text" name="onSceneSafeArea" placeholder="Safe Area Grid">
                  </section>
                  <section>
                    <label for="onSceneCommander">On-Scene Commander</label>
                    <section>
                      <input type="text" name="oscRank" placeholder="Rank">
                      <input type="text" name="oscFirstName" placeholder="First Name">
                      <input type="text" name="oscLastName" placeholder="Last Name">
                      <input type="tel" name="oscPhoneNumber" placeholder="Cell">
                      <input type="tel" name="oscOfficeNumber" placeholder="Office">
                      <input type="email" name="oscEmail" placeholder="Email">
                    </section>
                  </section>
                  <section>
                    <label for="actualItems">Items On-Scene</label>
                    <textarea name="actualItems" id=""
                      placeholder="1ea 105mm M1 Practice, Fired Projectile, 60-D-2-00-00; 1ea M564 MTSQ, Fuze, 60-X-2-00-00"></textarea>
                    <label for="itemGrid">Item Grid</label>
                    <textarea name="itemGrid" placeholder="MGRS"></textarea>
                  </section>
                  <section>
                    <label for="rspProcedures">RSP Procedures</label>
                    <textarea name="rspProcedures" placeholder="IAW 60-X-2-00-00..."></textarea>
                  </section>
                </fieldset>
              </div>

              <div>
                <fieldset>
                  <legend>
                    <h3>Depart Scene</h3>
                  </legend>
                  <label for="departSceneTime">Scene Departure Time</label>
                  <input type="time" name="departSceneTime">

                  <label for="departSceneDate">Scene Departure Date</label>
                  <input type="date" name="departSceneDate">

                  <label for="departSceneGrid">Depart Scene Grid</label>
                  <input type="text" name="departSceneGrid" placeholder="MGRS">
                </fieldset>
              </div>
              <div>
                <fieldset>
                  <legend>
                    <h3>Detonation / Disposal</h3>
                  </legend>
                  <section>
                    <label for="detonationTime">Detonation Time</label>
                    <input type="time" name="detonationTime">

                    <label for="detonationDate">Detonation Date</label>
                    <input type="date" name="detonationDate">

                    <label for="detonationGrid">Detonation Grid</label>
                    <input type="text" name="detonationGrid" placeholder="MGRS">

                    <label for="disposalProcedures">Disposal Procedures</label>
                    <textarea name="disposalProcedures" placeholder="Disposed of 1ea 105mm M1, 2ea MN88..."></textarea>

                    <label for=" explosivesUsed">Explosives Used</label>
                    <textarea name="explosivesUsed" placeholder="Lot Numbers and DODIC"></textarea>
                  </section>
                </fieldset>
              </div>

              <div>
                <fieldset>
                  <legend>
                    <h3>5 W's</h3>
                  </legend> <!--chat gpt summary-->
                  <!-- Autopopulate from other sections or ai summary -->
                  <section>
                    <label for="who">Who</label>
                    <input type="text" name="who" placeholder="who">

                    <label for="what">What</label>
                    <input type="text" name="what" placeholder="what">

                    <label for="where">Where</label>
                    <input type="text" name="where" placeholder="where">

                    <label for="when">When</label>
                    <input type="text" name="when" placeholder="when">

                    <label for="why">Why</label>
                    <input type="text" name="why" placeholder="why">
                  </section>
                </fieldset>
              </div>

              <div>
                <fieldset>
                  <legend>
                    <h3>Mission Complete</h3>
                  </legend>
                  <section>
                    <label for="truckEndMiles">End Mileage</label>
                    <input type="number" name="truckEndMiles" placeholder="End Mileage">

                    <label for="mcTime">Mission Complete Time</label>
                    <input type="time" name="mcTime">

                    <label for="mcDate">Mission Complete Date</label>
                    <input type="date" name="mcDate">
                  </section>
                </fieldset>
              </div>

              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>

              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>

              </form>
            </div>
          </fieldset>

        </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
          
          <% for(var i=0; i<posts.length; i++) {%>
            <!-- if{user == } -->
            <li class="col-6 justify-content-between mt-5">
              <a href="/post/<%= posts[i]._id%>">
                <img class="img-fluid" src="<%= posts[i].start?.image%>">
              </a>
            </li><%= console.log('from pofile.ejs last log:', posts[i]._id, 'user: ', user.id, 'posts._id', posts.id ) %>
            <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') -%>